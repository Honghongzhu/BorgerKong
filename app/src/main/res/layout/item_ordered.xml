<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemOrderedPhoto"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="@drawable/border_image"
        android:layout_margin="10dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/itemOrderedName"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@id/itemOrderedPhoto"
        app:layout_constraintTop_toTopOf="@id/itemOrderedPhoto"/>

    <TextView
        android:id="@+id/itemOrderedAmount"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemOrderedName"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemOrderedAmount" />

</androidx.constraintlayout.widget.ConstraintLayout>